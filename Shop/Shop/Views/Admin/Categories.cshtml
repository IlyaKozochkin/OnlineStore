@model List<Category>

@{
    ViewData["Title"] = "Категории";
}

<h1>Категории</h1>

<body>
    @Html.ActionLink("Добавить категорию", "AddCategory", "Admin", null, new { @class = "btn btn-primary" })
    <table class="table">
        <tr>
            <th>Название</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@Html.ActionLink("Изменить", "EditCategory", new { id = item.Id }, new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Удалить", "DeleteCategory", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </table>
</body>